<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bb11"
              android:fadingEdge="horizontal"
              android:orientation="vertical"
              android:paddingStart="30dp"
              android:paddingTop="30dp">


    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:fontFamily="sans-serif-black"
            android:text=" REGISTER"
            android:textColor="#1B2631"
            android:textSize="35dp" />


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/one"
            android:drawableStart="@drawable/ic_face_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:hint="Name"
            android:padding="15dp"
            android:textColor="#E74C3C"
            android:textColorHighlight="#E74C3C"
            android:textColorHint="#E74C3C"
            android:textSize="20dp" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/one"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:hint="Email id"
            android:padding="15dp"
            android:textColor="#E74C3C"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="#E74C3C" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/one"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:hint="Enrollment"
            android:padding="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorAccent" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/one"
            android:drawableStart="@drawable/ic_class_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:hint="Class"
            android:padding="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorAccent" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/one"
            android:drawableStart="@drawable/ic_touch_app_black_24dp"
            android:drawablePadding="10dp"
            android:fadingEdge="horizontal"
            android:fontFamily="sans-serif-black"
            android:hint="Brach"
            android:padding="15dp"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorAccent" />

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit" />


</LinearLayout>